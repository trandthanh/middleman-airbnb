<!-- Cards -->


<div class="container">
  <h2 class="text-center">Recent flats</h2>
  <div class="row">
    <% data.cities.each do |city| %>
      <div class="col-xs-12 col-md-4">
        <div class="card" style="background-image: url(<%= city.picture %>);">
          <div class="card-category"><%= city.category %></div>
          <div class="card-description">
            <h3 ><%= city.owner %>'s home</h2>
            <p><%= city.description %></p>
            <div class="rating">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
            </div>
          </div>
          <div class="card-user">
            <img class="card-user" src="<%= city.avatar %>" alt="<% city.username %>">
            <a class="card-link" href="#" ></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



